                    </svg>
                    <span class="account-text">{{admin.companyName}}</span>
                </div>
                <div class="dropdown-content">
                    {{#if superAdmin}}
                        <a href="/admin/all-products">All Products</a>
                        <a href="/admin/sellers">Sellers</a>
                        <a href="/admin/pending-sellers">Requests</a>
                    {{else}}
                        <a href="/admin/products">All Products</a>
                        <a href="/admin/orders">All Orders</a>
                        <a href="/admin/users">All Users</a>
                        <a href="/admin/coupons">Coupons</a>
                    {{/if}}

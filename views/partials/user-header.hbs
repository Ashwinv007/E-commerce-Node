<style>
    .dropdown .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1000;
        right: 0;
    }

    .dropdown-content.show {
        display: block;
    }

    /* Disable the default hover effect if it exists */
    .dropdown:hover > .dropdown-content {
        display: none;
    }
    .dropdown-toggle:hover + .dropdown-content.show {
         display: block;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const dropdownToggle = document.querySelector('.dropdown .dropdown-toggle');

        if (dropdownToggle) {
            dropdownToggle.addEventListener('click', function(event) {
                event.stopPropagation();
                let content = this.parentElement.querySelector('.dropdown-content');
                
                // Close any other open dropdowns
                document.querySelectorAll('.dropdown-content.show').forEach(openDropdown => {
                    if (openDropdown !== content) {
                        openDropdown.classList.remove('show');
                    }
                });

                content.classList.toggle('show');
            });
        }

        // Close the dropdown if the user clicks outside of it
        window.addEventListener('click', function(event) {
            if (!event.target.closest('.dropdown')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        });
    });
</script>

<script>
$(document).ready(function() {
    $('#search-input').on('keyup', function() {
        let searchTerm = $(this).val();
        if (searchTerm.length > 0) {
            $.ajax({
                url: '/find-product/' + searchTerm,
                method: 'GET',
                success: function(response) {
                    // response is now just the <section> or the error content
                    if($('.smartphones').length) {
                        $('.smartphones').replaceWith(response);
                    } else if ($('#product-section').length) {
                        $('#product-section').html(response)
                    }
                },
                error: function() {
                    if($('.smartphones').length) {
                        $('.smartphones').html('<div>Error during search. Please try again.</div>');
                    } else if ($('#product-section').length) {
                        $('#product-section').html('<div>Error during search. Please try again.</div>');
                    }
                }
            });
        } else {
            // Search box is empty, reload the page to show all products
            window.location.href = '/products';
        }
    });
});
</script>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.getElementById('menuToggle');
    const mobileNav = document.getElementById('mobileNav');
    const closeMenu = document.getElementById('closeMenu');
    const mobileOverlay = document.querySelector('.mobile-overlay');

    function openMenu() {
        mobileNav.classList.add('active');
        mobileOverlay.classList.add('active');
    }

    function closeMenuFunc() {
        mobileNav.classList.remove('active');
        mobileOverlay.classList.remove('active');
    }

    if (menuToggle) {
        menuToggle.addEventListener('click', openMenu);
    }

    if (closeMenu) {
        closeMenu.addEventListener('click', closeMenuFunc);
    }

    if (mobileOverlay) {
        mobileOverlay.addEventListener('click', closeMenuFunc);
    }

    // Handle search for mobile as well
    const mobileSearchInput = $('#mobile-search-input');
    if (mobileSearchInput.length) {
        mobileSearchInput.on('keyup', function() {
            let searchTerm = $(this).val();
            if (searchTerm.length > 0) {
                $.ajax({
                    url: '/find-product/' + searchTerm,
                    method: 'GET',
                    success: function(response) {
                        if($('.smartphones').length) {
                            $('.smartphones').replaceWith(response);
                        } else if ($('#product-section').length) {
                            $('#product-section').html(response)
                        }
                        // Close the menu after search
                        closeMenuFunc();
                    },
                    error: function() {
                        if($('.smartphones').length) {
                            $('.smartphones').html('<div>Error during search. Please try again.</div>');
                        } else if ($('#product-section').length) {
                            $('#product-section').html('<div>Error during search. Please try again.</div>');
                        }
                    }
                });
            } else {
                 window.location.href = '/products';
            }
        });
    }
});
</script>

<section class="track-order-page">
    <div class="page-container">
        <div class="page-header">
            <h1>Track Your Order</h1>
            {{#if trackOrder.orderId}}
                <p>Order #{{trackOrder.orderId}}</p>
            {{/if}}
        </div>

        <div class="tracking-container-card">
            <div class="tracking-timeline">

                <!-- Ordered Step -->
                <div class="timeline-step {{#if trackOrder.ordered.status}}completed{{/if}}">
                    <div class="timeline-icon"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Ordered</p>
                        {{#if trackOrder.ordered.status}}
                            <p class="timeline-date">{{trackOrder.ordered.date}}</p>
                        {{else}}
                            <p class="timeline-date">Waiting for confirmation</p>
                        {{/if}}
                    </div>
                </div>

                <!-- Shipped Step -->
                <div class="timeline-step {{#if trackOrder.shipped.status}}completed{{/if}}">
                    <div class="timeline-icon"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Shipped</p>
                        {{#if trackOrder.shipped.status}}
                            <p class="timeline-date">{{trackOrder.shipped.date}}</p>
                        {{/if}}
                    </div>
                </div>

                <!-- Out for Delivery Step -->
                <div class="timeline-step {{#if trackOrder.outForDelivery.status}}completed{{/if}}">
                    <div class="timeline-icon"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Out for Delivery</p>
                        {{#if trackOrder.outForDelivery.status}}
                            <p class="timeline-date">{{trackOrder.outForDelivery.date}}</p>
                        {{/if}}
                    </div>
                </div>

                <!-- Delivered Step -->
                <div class="timeline-step {{#if trackOrder.delivered.status}}completed{{/if}}">
                    <div class="timeline-icon"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Delivered</p>
                        {{#if trackOrder.delivered.status}}
                            <p class="timeline-date">{{trackOrder.delivered.date}}</p>
                        {{else if trackOrder.outForDelivery.status}}
                             <p class="timeline-date">Arriving Today</p>
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<section>
    <div class="row mt-4">
        <a class="btn btn-success ml-auto" href="/admin/add-product">Add Product</a>
    </div>
    <div class="container">
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each  products}}

    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.productName}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.productDescription}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you  sure to delete {{this.productName}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  
  </tbody>
</table>
</div>
</section>
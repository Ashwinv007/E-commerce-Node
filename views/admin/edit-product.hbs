<div class="page-container">
    <div class="page-header">
        <h1>Edit Product</h1>
        <p>Update the details below for the product.</p>
    </div>

    <div class="product-form-card">
        <form id="productForm" action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
            <h2 class="section-title">Product Information</h2>
            
            <div class="form-grid">
                <div class="form-group full-width">
                    <label for="productName">Product Name</label>
                    <input type="text" id="productName" name="productName" placeholder="Enter product name" value="{{product.productName}}" required>
                </div>

                <div class="form-group full-width">
                    <label for="category">Category</label>
                    <select id="category" name="Category" required>
                        <option value="">Select category</option>
                        <option value="smartphones" {{#if (eq product.Category "smartphones")}}selected{{/if}}>Smartphones</option>
                        <option value="electronics" {{#if (eq product.Category "electronics")}}selected{{/if}}>Electronics</option>
                        <option value="fashion" {{#if (eq product.Category "fashion")}}selected{{/if}}>Fashion</option>
                        <option value="home-kitchen" {{#if (eq product.Category "home-kitchen")}}selected{{/if}}>Home & Kitchen</option>
                        <option value="beauty" {{#if (eq product.Category "beauty")}}selected{{/if}}>Beauty</option>
                        <option value="sports" {{#if (eq product.Category "sports")}}selected{{/if}}>Sports, Toys & Luggage</option>
                        <option value="groceries" {{#if (eq product.Category "groceries")}}selected{{/if}}>Groceries</option>
                        <option value="furniture" {{#if (eq product.Category "furniture")}}selected{{/if}}>Furniture</option>
                    </select>
                </div>

                <div class="form-group full-width">
                    <label for="description">Description</label>
                    <textarea id="description" name="productDescription" placeholder="Enter product description" required>{{product.productDescription}}</textarea>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="price">Price</label>
                        <div class="price-input-wrapper" style="position: relative;">
                            <span style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%);">â‚¹</span>
                            <input type="number" id="price" name="productPrice" placeholder="" step="0.01" min="0" required style="padding-left: 30px;" value="{{product.productPrice}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="units">Number of Units</label>
                        <input type="number" id="units" name="stockAmount" placeholder="0" min="0" step="1" required value="{{product.stockAmount}}">
                    </div>
                </div>

                <input id="sellerId" style="display:none" type="text" name="sellerId" value='{{admin._id}}'>

                <div class="form-group full-width">
                    <label>Product Images</label>
                     <div id="existingImages" style="margin-bottom: 1rem; display: flex; flex-wrap: wrap; gap: 10px;">
                        {{#each product.imageUrls}}
                            <img src="{{this}}" alt="Product image {{inc @index}}" style="width: 100px; height: 100px; border-radius: 8px; object-fit: cover;">
                        {{/each}}
                    </div>
                    <label>Upload New Images (optional)</label>
                    <div id="productImages" style="margin-bottom: 1rem; display: flex; flex-wrap: wrap; gap: 10px;">
                        {{!-- Image previews will go here --}}
                    </div>
                    <div class="upload-area" onclick="document.getElementById('productImageInput').click()">
                        <div class="upload-icon">
                            <i class="fas fa-image"></i>
                        </div>
                        <div class="upload-text">
                            <a href="javascript:void(0)">Click to upload</a> or drag and drop
                        </div>
                        <div class="upload-info">
                            PNG, JPG, GIF up to 10MB
                        </div>
                    </div>
                    <input type="file" id="productImageInput" name="productImage" onchange="viewImage(event)" accept="image/*" multiple style="display: none;">
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="subBtn">
                    <i class="fas fa-plus"></i>
                    Update Product
                </button>
            </div>
        </form>
    </div>
</div>

<script>
   function viewImage(event){
    let productImagesContainer = document.getElementById('productImages');
    let files = event.target.files;

    // Always clear previews on change
    productImagesContainer.innerHTML = ''; 
    
    if(files.length > 3){
        alert("You can only upload a maximum of 3 files.");
        event.target.value = ""; // Clear the file input
        return;
    }
    
    if (files.length > 0) {
        let imgs = [];
        for(let i = 0; i < files.length; i++){
            imgs[i] = document.createElement('img');
            imgs[i].src = URL.createObjectURL(files[i]);
            imgs[i].style.height = '100px';
            imgs[i].style.width = 'auto';
            imgs[i].style.borderRadius = '8px';
            imgs[i].style.objectFit = 'cover';
            productImagesContainer.appendChild(imgs[i]);
        }
    }
  }
</script>

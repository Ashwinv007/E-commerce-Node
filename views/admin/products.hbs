<section id="ordersList" class="orders-section">
    <div class="page-container">
        <div class="page-header">
            <h1>Seller Dashboard</h1>
            <p>Manage your products and view revenue</p>
        </div>

        <div class="add-product-container">
            <a href="/admin/add-product" class="action-btn view">Add Product</a>
        </div>

        <div class="orders-container">
            <table class="orders-table" id="productsTable">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each product}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{this.productName}}</td>
                        <td>{{this.productDescription}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.productPrice}}</td>
                        <td><img class="order-product-image" src="{{this.thumbnailUrl}}" alt=""></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="action-btn track">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="action-btn cancel" onclick="return confirm('Are you sure to delete {{this.productName}}?')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<style>
    .add-product-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 1.5rem;
        margin-right: 1.5rem;
    }
    .add-product-container a {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
</style>

<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>
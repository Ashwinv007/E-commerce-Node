        <h2>Welcome back! üëã</h2>
        <p>Here's what's happening with your store today</p>
    </div>

    <!-- KPI Cards -->
    <div class="kpi-grid">
        <div class="kpi-card primary">
            <div class="kpi-header">
                <div class="kpi-icon">üí∞</div>
            </div>
            <div class="kpi-label">Seller Revenue</div>
            <div class="kpi-value">‚Çπ{{sellerRevenue}}</div>
            <div class="kpi-subtitle">All-time earnings</div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-icon">‚è≥</div>
            </div>
            <div class="kpi-label">Pending Seller Revenue</div>
            <div class="kpi-value">‚Çπ{{pendingSellerRevenue}}</div>
            <div class="kpi-subtitle">Awaiting clearance</div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-icon">üõí</div>
                <div class="kpi-trend"></div>
            </div>
            <div class="kpi-label">Total Orders</div>
            <div class="kpi-value">{{totalOrders}}</div>
            <div class="kpi-subtitle">Completed orders</div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-icon">üë•</div>
                <div class="kpi-trend"></div>
            </div>
            <div class="kpi-label">Total Customers</div>
            <div class="kpi-value">{{totalCustomers}}</div>
            <div class="kpi-subtitle">Registered users</div>
        </div>
    </div>

    <!-- Analytics Section -->
    <div class="analytics-section">
        <div class="section-header">
            <h3>Analytics & Insights</h3>
            <p>Detailed performance metrics and trends</p>
        </div>

        <div class="chart-grid">
            <!-- Sales Overview Chart -->
            <div class="chart-card">
                <div class="chart-header">
                    <div>
                        <div class="chart-title">Sales Overview</div>
                        <div class="chart-subtitle">Revenue trend for the last 7 days</div>
                    </div>
                    <div class="chart-trend">+18.2%</div>
                </div>
                <div class="chart-container">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>

            <!-- Payment Methods Chart -->
            <div class="chart-card">
                <div class="chart-header">
                    <div>
                        <div class="chart-title">Payment Methods</div>
                        <div class="chart-subtitle">Distribution of payment preferences</div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="paymentChart"></canvas>
                </div>
            </div>

            <!-- Top Products Chart -->
            <div class="chart-card">
                <div class="chart-header">
                    <div>
                        <div class="chart-title">Top Products</div>
                        <div class="chart-subtitle">Best selling items this month</div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="productsChart"></canvas>
                </div>
            </div>

            <!-- Order Status Chart -->
            <div class="chart-card">
                <div class="chart-header">
                    <div>
                        <div class="chart-title">Order Status</div>
                        <div class="chart-subtitle">Current order distribution</div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="orderStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>